<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Desktop.Views.RequestCredentialsView" Background="#1b262c">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Classes="RequestCredentialsButton">
                <TextBlock>Login!</TextBlock>
        </Button>
        <TextBlock Classes="RequestCredentialsGreeting" DockPanel.Dock="Top">Create an account!</TextBlock> 
        <StackPanel DockPanel.Dock="Top" Classes="RequestCredentialsForm">
            <StackPanel Classes="RequestCredentialsBox RBox">
                <TextBox
                    Watermark = "Enter your login!" 
                >
                </TextBox>
            </StackPanel>
            <TextBlock Classes="AlreadyAccount">Already have an account?</TextBlock>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Classes="NewPassword">
            <TextBlock Classes="i">Your password:</TextBlock>
            <TextBlock Classes="p">8%k6R?NqB)'b</TextBlock>
        </StackPanel>
    </DockPanel>
</UserControl>
