        <!-- DSIGNING CHAT PREVIEW -->
    <Style Selector="StackPanel.ChatList">
        <Setter Property="Margin" Value="0 0 0 0"/>
        <Setter Property="Width" Value="380"/>
    </Style>

    <Style Selector="Border.ChatPreview_bd">
        <Setter Property="Background" Value="#1b262c"/>
    </Style>

    <Style Selector="DockPanel.ChatPreview">
        <Setter Property="Height" Value="50"/>
    </Style>

    <Style Selector="DockPanel.ChatPreview TextBlock">
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style Selector="TextBlock.Name">
        <Setter Property="FontWeight" Value="Black"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Margin" Value=" 7 5 0 0"/>
    </Style>
    <Style Selector="TextBlock.LastMessage">
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#B5B5B5"/>
        <Setter Property="Margin" Value="12 5 0 0"/>
    </Style>

    <Style Selector="DockPanel.ChatPreview StackPanel.Unread">
        <Setter Property="Margin" Value=" 0 5 15 0"/>
    </Style>
    <Style Selector="DockPanel.ChatPreview TextBlock.n">
        <Setter Property="FontWeight" Value="Black"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="#dcd6f7"/>
        <Setter Property="Margin" Value=" 0 0 5 0"/>
    </Style>

    <Style Selector="DockPanel.ChatPreview TextBlock.u">
        <Setter Property="Margin" Value=" 0 0 15 0"/>
    </Style>

    <Style Selector="DockPanel.ChatPreview StackPanel.MetaInfo">
        <Setter Property="Margin" Value="0 5 10 0"/>
    </Style>
    <Style Selector="DockPanel.ChatPreview StackPanel.MetaInfo TextBlock.Date">
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="#dcd6f7"/>
        <Setter Property="Margin" Value="0 0 15 0"/>
    </Style>


    <Style Selector="Border.ChatPreview_bd:pointerover">
        <Setter Property="Background" Value="#E61b262c"/>
    </Style>


    <!-- DESIGNING EM SCROLLBAR -->
    <Style Selector="ScrollViewer.ChatList_scroll /template/ScrollBar">
        <Setter Property="Margin" Value="-12 5 0 5"/>
        <Setter Property="Width" Value="7"/>
        <Setter Property="Template">
            <ControlTemplate>
            <Border Background="#b5b5b5">
                <Track
                    Minimum="{TemplateBinding Minimum}"
                    Maximum="{TemplateBinding Maximum}"
                    Value="{TemplateBinding Value, Mode=TwoWay}"
                    ViewportSize="{TemplateBinding ViewportSize}"
                    Orientation="{TemplateBinding Orientation}"
                    IsDirectionReversed="True">
                <Thumb Name="thumb"/>
                </Track>
            </Border>
        </ControlTemplate>
        </Setter>
    </Style>
    <Style Selector="ScrollViewer.ChatList_scroll">
        <Setter Property="Height" Value="440" />
    </Style>
    <Style Selector="ScrollViewer.ChatList_scroll /template/ScrollBar:vertical">
        <Setter Property="Opacity" Value="0.15"/>
        <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
    </Style>
    <Style Selector="ScrollViewer.ChatList_scroll /template/ScrollBar:vertical:pointerover">
        <Setter Property="Opacity" Value="0.25"/>
    </Style>
    <Style Selector="ScrollViewer.ChatList_scroll /template/ScrollBar:vertical /template/Border">
        <Setter Property="CornerRadius" Value="3"/>
    </Style>
    <Style Selector="ScrollViewer.ChatList_scroll /template/ScrollBar:vertical /template/ Thumb">
        <Setter Property="Width" Value="7"/>
        <Setter Property="Opacity" Value="0.9"/>
        <Setter Property="Background" Value="#cae8d5"/>
    </Style>
    <Style Selector="ScrollViewer.ChatList_scroll /template/ScrollBar:vertical /template/ Thumb /template/Border">
        <Setter Property="CornerRadius" Value="3"/>
    </Style>


